# generated upstart config

description "REST based API server - Gateway for Megam."
author "Rajthilak <rajthilak@megam.co.in>"

# When to start the servicee 
start on runlevel [2345]
start on (started networking)

# When to stop the service
stop on runlevel [016]
stop on (stopping networking)
stop on (stopped megamgateway)

# Automatically restart process if crashed. Tries 0 times every 60 seconds
respawn
respawn limit 0 60

script
    export HOME="/root"
    cd /usr/share/megam/megamgateway/bin/
    exec sudo ./megamgateway -Dconfig.file=/usr/share/megam/megamgateway/conf/application-production.conf >> /var/log/megam/megamgateway/megamgateway.log 2>&1
    #echo $$ > /var/run/megam/megamgateway.pid
end script

pre-start script
 [ -d /var/log/megam/megamgateway ] || mkdir -p /var/log/megam/megamgateway
[ -d /var/run/megam ] || mkdir -p /var/run/megam
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/megam/megamgateway/megamgateway.log
end script

pre-stop script
   #rm /var/run/megam/megamgateway.pid
    rm /usr/share/megam/megamgateway/RUNNING_PID
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/megam/megamgateway/megamgateway.log
end script



